SUBDESIGN frequencia_contador_1Hz
(
	clock,enable : INPUT;	
	clock_saida: OUTPUT;
)

VARIABLE
	count[3..0] : DFF;
	flag : NODE;
	
BEGIN
	count[].clk = clock;
	
	IF enable THEN					
		IF count[].q < 5 THEN
			clock_saida = GND;
		ELSIF count[].q > 5 & count[].q < 10 THEN
			clock_saida =  VCC;
		ELSE
			count[].d = 0;
		END IF;		
		count[].d = count[].q + 1;
	ELSE
		count[].d = count[].q;
	END IF;

END;